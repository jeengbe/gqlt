{
  // For some reason, this is broken
  // "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "rootDir": ".",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./../dist",
    "paths": {
      "@paths": [
        "./paths"
      ],
      "@core/*": [
        "./core/*"
      ],
      "@arana/pool/base/*": [
        "./modules/arana/pool/base/*"
      ],
      "@arana/pool/history/*": [
        "./modules/arana/pool/history/*"
      ],
      "@arana/utils/*": [
        "./modules/arana/utils/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@classes": [
        "./core/classes"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "files": [
    "./core/index.ts",
    "./core/scalars.d.ts"
  ],
  "include": [
    "./core/generated/*.json",
    "./modules/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
  ]
}
