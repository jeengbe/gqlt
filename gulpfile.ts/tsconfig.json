{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "../gulpfile.js",
    "paths": {
      "@paths": [
        "./paths"
      ],
      "@gulp/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": [
    "**/*",
    "../src/modules/**/gulp/*"
  ]
}
